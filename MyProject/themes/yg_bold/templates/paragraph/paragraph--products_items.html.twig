				<div class="v-align-middle">
					<span class="icon">
						<img src="{{ file_url(content.field_picture['#items'].entity.uri.value) }}" alt="{{ content.field_image['#items'].alt }}" class="img-responsive"></span>
					<h3 class="title">{{ content.field_title.0 }}</h3>
					<h5 class="category">{{ content.field_phone_number.0 }}</h5>
				</div>
			</div>
		</a>
	</div>
	 {% else %}
		<div class="col-2 reverse">
