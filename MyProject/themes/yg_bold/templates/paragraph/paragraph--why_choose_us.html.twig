<!-- Why Choose Us -->
<div class="fh5co-section-with-image">
	<img src="{{ file_url(content.field_image['#items'].entity.uri.value) }}" 
	alt="{{ content.field_image['#items'].alt }}" class="img-responsive">
	<div class="fh5co-box animate-box">
		<h2>{{ content.field_title.0 }}</h2>
		{{ content.field_body.0 }}
		{% if content.field_url.0|render is not empty %}
			<p><a href="{{ content.field_url[0]['#url']|render }}" class="btn btn-primary btn-outline with-arrow">{{ content.field_url[0]['#title'] }} <i class="icon-arrow-right"></i></a></p>
		{% endif %}
	</div>
</div>
<!-- Why Choose Us End-->



